pipeline {
    agent any
    stages {
        
        stage('Preparations') {
            steps {
                sh 'mkdir temp_data'
                sh 'pip install gdown'
                sh 'pip install scikit-learn'
                sh 'pip install pandas'
                sh 'pip install dvc'
                sh 'dvc remote modify datawarehouse gdrive_client_id ${GDRIVE_CLIENT_ID}'
                sh 'dvc remote modify myremote gdrive_client_secret ${GDRIVE_CLIENT_SECRET}'           
                sh 'dvc pull -r datawarehouse'
            }
        }
        
        stage('Data Creation') {
            steps {
                sh 'python3 data_creation.py '
            }
        }
        
        stage('Preprocessing') {
            steps {
               sh 'python3 data_preprocessing.py'
            }
        }
        
        stage('Train') {
            steps {
                sh 'python3 model_learning.py'
            }
        }
        
        stage('Predict') {
            steps {
               sh 'python3 model_deployment.py'
            }
        }
        
        stage('Delete Temporary Data') {
            steps {
               sh 'rm -rf temp_data'
            }
        }
    }
}
