pipeline {
    agent any
    stages {
        
        stage('Preparations') {
            steps {
                sh 'pip install gdown'
                sh 'pip install scikit-learn'
                sh 'pip install pandas'
                sh 'pip install dvc[s3]'
                sh 'pip install pytest'
                sh 'dvc pull -r s3cloud'
                sh 'mkdir -p temp_data'
            }
        }

        
        stage('Data Creation') {
            steps {
                sh 'python3 data_creation.py '
            }
        }
        
        stage('Preprocessing') {
            steps {
               sh 'python3 data_preprocessing.py'
            }
        }
        
        stage('Train') {
            steps {
                sh 'python3 model_learning.py'
            }
        }

        stage('Test') {
            steps {
                sh 'python3 -m unittest test_model.py'
            }
        }
        
        stage('Run Container') {
            steps{
                sh 'sudo docker build -f ./Dockerfile_nginx -t my-nginx .'
                sh 'sudo docker build -f ./Dockerfile -t strm:latest .'
                sh 'sudo docker run my-nginx -p 80:80 -d'
                sh 'sudo docker run strm:latest -p 8501:8501 -d'
            }
        }

        // stage('Predict') {
        //     steps {
        //        sh 'python3 model_deployment.py'
        //     }
        // }
        
        stage('Delete Temporary Data') {
            steps {
               sh 'rm -rf temp_data'
            }
        }
    }
}
